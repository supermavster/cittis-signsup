<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_vertical"
        tools:context=".view.signal.vertical.VerticalSignal">


    <ImageButton
            android:src="@drawable/btn_vertical_informative"
            android:layout_width="100dp"
            android:layout_height="99dp"
            android:id="@+id/ibtn_vertical_informative"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:contentDescription="@string/btn_vertical_informative"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/ibtn_vertical_preventive"
            app:layout_constraintHorizontal_bias="0.066" android:layout_marginTop="176dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_vertical_type_signal" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:src="@drawable/btn_vertical_preventive"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibtn_vertical_preventive"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/btn_vertical_preventive"
            android:scaleType="centerInside" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_vertical_type_signal"
            app:layout_constraintVertical_bias="0.32" android:background="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageButton
            android:src="@drawable/btn_vertical_regulatory"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibtn_vertical_regulatory"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:contentDescription="@string/btn_vertical_regulatory"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/ibtn_vertical_preventive" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/lbl_vertical_type_signal"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.303" app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:src="@drawable/btn_vertical_work"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibtn_vertical_work" android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" android:contentDescription="@string/btn_vertical_work"
            android:scaleType="centerInside"
            android:background="@android:color/transparent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_vertical_type_signal"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ibtn_vertical_cycle_route"
            app:layout_constraintHorizontal_bias="0.157"/>
    <ImageButton
            android:src="@drawable/btn_vertical_ciclo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ibtn_vertical_cycle_route" android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:contentDescription="@string/btn_vertical_cycle_route"
            android:scaleType="centerInside"
            android:background="@android:color/transparent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_vertical_type_signal"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/lbl_vertical_type_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_vertical_type_signal" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"
            style="@style/CittisText"/>
</android.support.constraint.ConstraintLayout>