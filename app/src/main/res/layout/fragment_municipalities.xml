<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.signal.Municipalities"
        android:background="@drawable/background"
>
    <ImageView
            android:layout_width="272dp"
            android:layout_height="242dp"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:focusableInTouchMode="true" android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:src="@drawable/logo" android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.495"/>

    <AutoCompleteTextView
            android:id="@+id/auto_complete_departamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.0" android:hint="@string/txt_departamento"
            android:textColor="#000000" android:textColorHint="#80000000" android:textColorHighlight="#000000"
            android:textColorLink="#000000"/>
    <AutoCompleteTextView
            android:id="@+id/auto_complete_municipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/auto_complete_departamento"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.0" android:hint="@string/txt_municipio"
            android:textColorHint="#80000000" android:textColorLink="#000000" android:textColorHighlight="#000000"
            android:textColor="#000000"/>
    <Button
            android:text="@string/init_process"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:id="@+id/buttonMain" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/auto_complete_municipio" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.354" style="@style/CittisButton" android:textSize="16sp"
            android:textColorHighlight="#00FFFFFF" android:textColorLink="#00FFFFFF" android:textColorHint="#00FFFFFF"/>
    <Button
            android:layout_width="155dp"
            android:layout_height="35dp"
            android:id="@+id/btn_salir" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/auto_complete_municipio" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.357" android:background="@drawable/salir"
            android:textColorLink="#00FFFFFF" android:textColorHighlight="#00FFFFFF"/>
</android.support.constraint.ConstraintLayout>