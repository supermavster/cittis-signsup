<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".view.signal.TypeRoad"
                                             android:background="@drawable/background"
>


    <Button
            android:background="@drawable/button"
            android:text="@string/btn_urban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_urban"
            style="@style/CittisButton" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="204dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_rural"/>
    <Button
            android:background="@drawable/button"
            android:text="@string/btn_rural"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rural"
            style="@style/CittisButton" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="251dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_urban"/>
    <TextView
            android:text="@string/lbl_title_type_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_title_type_route"
            style="@style/CittisText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="27dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>