<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".view.signal.AddressLocation">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:id="@+id/linearLayout3"
            android:gravity="center" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.58" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_next_address">
        <TextView
                android:text="@string/lbl_location_between_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbl_location_between_signal"
                android:layout_weight="1" style="@style/CittisText"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginBottom="15dp">
            <Spinner
                    android:id="@+id/spin_location_between_signal"
                    android:layout_width="250dp"
                    android:layout_height="40dp" android:spinnerMode="dialog" android:gravity="center"
                    android:entries="@array/spinner_zip" android:dropDownWidth="wrap_content"
                    android:background="#31000000"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="10dp">
                <EditText
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/txt_location_between_signal"
                        android:autofillHints="" tools:targetApi="o"
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"
                        android:layout_weight="1" android:paddingLeft="5dp"/>
                <EditText
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txt_number_location_between_signal"
                        android:hint="@string/lbl_number" android:autofillHints="" tools:targetApi="o"
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"/>
                <EditText
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/txt_score_location_between_signal"
                        android:hint="@string/lbl_score" android:autofillHints="" tools:targetApi="o"
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:text="@string/lbl_location_and_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbl_location_and_signal"
                android:layout_weight="1" style="@style/CittisText"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginBottom="15dp">
            <Spinner
                    android:id="@+id/spin_location_and_signal"
                    android:layout_width="250dp"
                    android:layout_height="40dp" android:spinnerMode="dialog" android:gravity="center"
                    android:entries="@array/spinner_zip" android:dropDownWidth="wrap_content"
                    android:background="#31000000"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="10dp">
                <EditText
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/txt_location_and_signal"
                        android:autofillHints="" tools:targetApi="o"
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"
                        android:layout_weight="1" android:paddingLeft="5dp"/>
                <EditText
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txt_number_location_and_signal"
                        android:hint="@string/lbl_number" android:autofillHints="" tools:targetApi="o"
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"/>
                <EditText
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/txt_score_location_and_signal"
                        android:hint="@string/lbl_score" android:autofillHints="" tools:targetApi="o"
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:text="@string/lbl_location_with_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbl_location_with_signal"
                android:layout_weight="1" style="@style/CittisText"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1" android:layout_marginBottom="15dp">
            <Spinner
                    android:id="@+id/spin_location_with_signal"
                    android:layout_width="250dp"
                    android:layout_height="40dp" android:spinnerMode="dialog" android:gravity="center"
                    android:entries="@array/spinner_zip" android:dropDownWidth="wrap_content"
                    android:background="#31000000"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="10dp">
                <EditText
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/txt_location_with_signal"
                        android:autofillHints=""
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"
                        android:layout_weight="1"/>
                <EditText
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txt_number_location_with_signal"
                        android:hint="@string/lbl_number" android:autofillHints="" tools:targetApi="o"
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"/>
                <EditText
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/txt_score_location_with_signal"
                        android:hint="@string/lbl_score" android:autofillHints="" tools:targetApi="o"
                        android:textColor="#000000" android:textColorHighlight="#000000"
                        android:textColorHint="#000000" android:textColorLink="#000000" android:background="#3B000000"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="@string/next"
            android:layout_width="250dp"
            android:layout_height="wrap_content" android:id="@+id/btn_next_address" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/CittisButton"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.406"/>

</android.support.constraint.ConstraintLayout>