<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".view.signal.horizontal.HorizontalSignal">


    <TextView
            android:text="@string/lbl_location_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView4" android:textAlignment="center"
            android:gravity="center" style="@style/CittisText"/>
    <ImageButton
            android:layout_width="294dp"
            android:layout_height="107dp" app:srcCompat="@drawable/btn_tramo"
            android:id="@+id/ibtn_stretch" android:contentDescription="@string/btn_stretch"
            android:scaleType="fitXY" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="240dp"
            android:background="@android:drawable/screen_background_light_transparent"/>
    <ImageButton
            android:layout_width="296dp"
            android:layout_height="106dp" app:srcCompat="@drawable/btn_intersection"
            android:id="@+id/ibtn_intersection" android:contentDescription="@string/btn_intersection"
            android:scaleType="fitXY" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ibtn_stretch"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:background="@android:drawable/screen_background_light_transparent"/>
</android.support.constraint.ConstraintLayout>